<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_29"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/logo" />

        <TextView
            android:id="@+id/tv_ver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:textColor="#23B6FB"
            android:textSize="@dimen/sp_13"
            tools:text="版本: 3.0.16" />


    </RelativeLayout>

    <View
        android:id="@+id/location_view"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_20"
        android:layout_centerInParent="true"
        android:alpha="0" />

    <RelativeLayout
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_110"
        android:layout_above="@+id/location_view"
        android:layout_toLeftOf="@+id/location_view">

        <Button
            android:id="@+id/btn_register"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:layout_alignParentTop="true"
            android:background="@mipmap/home_btn_tab_renlianzhuce_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_5"
            android:text="人脸注册"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_110"
        android:layout_above="@+id/location_view"
        android:layout_toRightOf="@+id/location_view">

        <Button
            android:id="@+id/btn_user"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:background="@mipmap/home_btn_tab_renliankuguanli_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_5"
            android:text="人脸库管理"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_110"
        android:layout_below="@+id/location_view"
        android:layout_toLeftOf="@+id/location_view">

        <Button
            android:id="@+id/btn_setting"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:background="@mipmap/home_btn_tab_gongnengshezhi_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_5"
            android:text="功能设置"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_view"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_110"
        android:layout_below="@+id/location_view"
        android:layout_toRightOf="@+id/location_view">

        <Button
            android:id="@+id/btn_auth"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:background="@mipmap/home_btn_tab_shouquanjihuo_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_5"
            android:text="授权激活"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@+id/rl_view"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@drawable/fillet_style_return_selector"
        android:text="返回"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>